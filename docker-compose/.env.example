# ===================================
# LeapMailr - Environment Variables
# ===================================

# ----------------
# Server Settings
# ----------------
PORT=8080
# GIN_MODE=release

# ----------------
# Database Settings
# ----------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=leapmailr
DB_PASSWORD=leapmailr_secret_2024
DB_NAME=leapmailr
DB_SSLMODE=disable

# ----------------
# JWT Settings
# ----------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# ----------------
# Email Provider - SMTP
# ----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@leapmailr.com

# ----------------
# Email Provider - SendGrid (Optional)
# ----------------
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM=noreply@leapmailr.com

# ----------------
# Email Provider - Mailgun (Optional)
# ----------------
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_FROM=noreply@leapmailr.com

# ----------------
# Email Provider - Amazon SES (Optional)
# ----------------
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# SES_FROM=noreply@leapmailr.com

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# ----------------
# CORS Settings
# ----------------
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# ----------------
# Frontend Settings
# ----------------
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
